	name = Jacopo Gasparetto
	email = jacopo.gasparetto@gmail.com
	mail = jacopo.gasparetto@gmail.com
[alias]
	change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ \\\"$`echo $VAR`\\\" = '$OLD' ]]; then export $VAR='$NEW'; fi\" $@; }; f"
[init]
	defaultBranch = main
[rebase]
	autoStash = true
